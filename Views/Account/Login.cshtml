@model DrumWebshop.ViewModel.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header h4 font-weight-bold">Login</div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="Email" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="inputPassword" name="Password" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a href="/Home/Index" class="btn btn-danger">Return to Home</a>
                    </form>
                </div>
                <div class="card-footer">
                    <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>
